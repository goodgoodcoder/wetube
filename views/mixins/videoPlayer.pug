mixin videoPlayer(video = {})
    .videoPlayer#jsVideoPlayer
        video(src=`/${video.src}`)
        .videoPlayer__controls
            progress.videoPlayer__progressBar#jsProgressBar(max="100", min="0", value="0")
            .videoPlayer__column
                span#jsPlayButton
                    i.fas.fa-play
                span
                    span#currentTime 00:00:00
                    |/
                    span#totalTime 00:00:00
            .videoPlayer__column
                input.videoPlayer__volume#jsVolume(type="range", min="0", max="1", step="0.1", value="0.5")
                span#jsVolumeButton
                    i.fas.fa-volume-up
                span#jsFullScreenButton
                    i.fas.fa-expand